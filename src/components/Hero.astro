---
interface Props {
	headline: string;
	subheadline: string;
	primaryCta: { label: string; href: string };
	secondaryCta: { label: string; href: string };
	bullets: string[];
}

const { headline, subheadline, primaryCta, secondaryCta, bullets } = Astro.props as Props;
---

<section class="section-reveal relative overflow-hidden pb-16 pt-8 lg:pt-12" id="about">
	<div class="absolute inset-0">
		<div
			class="absolute -top-32 right-[-10%] h-[420px] w-[420px] rounded-full bg-[radial-gradient(circle, color-mix(in_srgb,var(--c-accent)_35%,transparent), transparent 65%)] blur-3xl opacity-70"
		></div>
		<div
			class="absolute left-[-12%] top-10 h-[360px] w-[360px] rounded-full bg-[radial-gradient(circle, color-mix(in_srgb,var(--c-secondary)_35%,transparent), transparent 70%)] blur-3xl opacity-60"
		></div>
		<div class="absolute inset-0 subtle-grid"></div>
	</div>

	<div class="relative mx-auto max-w-6xl px-6">
		<div class="reveal-stagger grid items-center gap-12 lg:grid-cols-[1.05fr_0.95fr]">
			<div>
				<p class="inline-flex items-center rounded-full border border-[color:var(--c-border)] bg-white/80 px-3 py-1 text-xs font-semibold uppercase tracking-[0.24em] text-[color:var(--c-muted)]">
					For independent professionals
				</p>
				<h1 class="mt-4 text-4xl font-semibold leading-tight text-[color:var(--c-text)] md:text-5xl">
					{headline}
				</h1>
				<p class="mt-5 text-base leading-relaxed text-[color:var(--c-muted)] md:text-lg">
					{subheadline}
				</p>
				<div class="mt-8 flex flex-wrap gap-4">
					<a
						class="btn btn-primary text-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[color:var(--c-accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[color:var(--c-bg)]"
						href={primaryCta.href}
					>
						{primaryCta.label}
					</a>
					<a
						class="btn btn-secondary text-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[color:var(--c-accent)] focus-visible:ring-offset-2 focus-visible:ring-offset-[color:var(--c-bg)]"
						href={secondaryCta.href}
					>
						{secondaryCta.label}
					</a>
				</div>
				<ul class="mt-6 grid gap-2 text-sm font-medium text-[color:var(--c-muted)]">
					{bullets.map((item) => (
						<li class="flex items-center gap-2">
							<span class="h-1.5 w-1.5 rounded-full bg-[color:var(--c-accent)]" aria-hidden="true"></span>
							{item}
						</li>
					))}
				</ul>
			</div>

			<div class="relative">
				<div class="gradient-border">
					<div class="relative h-[360px] rounded-[23px] border border-[color:var(--c-border)] bg-[color:var(--c-surface)]/80 p-6 shadow-[0_35px_90px_-70px_rgba(15,23,42,0.6)] backdrop-blur-sm">
						<div class="absolute inset-0 rounded-[23px] accent-gradient opacity-80"></div>
					</div>
				</div>

				<div class="float-slow absolute left-8 top-12 z-20 w-52 rounded-2xl border border-[color:var(--c-border)] bg-white/85 p-4 text-sm shadow-[0_20px_40px_-32px_rgba(15,23,42,0.55)] backdrop-blur-sm">
					<p class="font-semibold text-[color:var(--c-text)]">Quick Load Times</p>
					<p class="mt-1 text-[color:var(--c-muted)]">Instant load times that feel premium.</p>
				</div>

				<div class="float-slow delay-1 absolute right-8 top-28 z-20 w-56 rounded-2xl border border-[color:var(--c-border)] bg-white/85 p-4 text-sm shadow-[0_20px_40px_-32px_rgba(15,23,42,0.55)] backdrop-blur-sm">
					<p class="font-semibold text-[color:var(--c-text)]">Built for Trust</p>
					<p class="mt-1 text-[color:var(--c-muted)]">Clean, professional design that signals credibility.</p>
				</div>

				<div class="float-slow delay-2 absolute bottom-8 left-16 z-20 w-60 rounded-2xl border border-[color:var(--c-border)] bg-white/85 p-4 text-sm shadow-[0_20px_40px_-32px_rgba(15,23,42,0.55)] backdrop-blur-sm">
					<p class="font-semibold text-[color:var(--c-text)]">Low Maintenance</p>
					<p class="mt-1 text-[color:var(--c-muted)]">Secure hosting with ongoing care.</p>
				</div>

				<div class="mt-6 hidden grid gap-3 text-sm text-[color:var(--c-muted)] md:hidden">
					<div class="rounded-2xl border border-[color:var(--c-border)] bg-white/85 p-4 shadow-[0_18px_40px_-32px_rgba(15,23,42,0.45)]">
						<p class="font-semibold text-[color:var(--c-text)]">Quick Load Times</p>
						<p class="mt-1">Instant load times that feel premium.</p>
					</div>
					<div class="rounded-2xl border border-[color:var(--c-border)] bg-white/85 p-4 shadow-[0_18px_40px_-32px_rgba(15,23,42,0.45)]">
						<p class="font-semibold text-[color:var(--c-text)]">Built for Trust</p>
						<p class="mt-1">Clean, professional design that signals credibility.</p>
					</div>
					<div class="rounded-2xl border border-[color:var(--c-border)] bg-white/85 p-4 shadow-[0_18px_40px_-32px_rgba(15,23,42,0.45)]">
						<p class="font-semibold text-[color:var(--c-text)]">Low Maintenance</p>
						<p class="mt-1">Secure hosting with ongoing care.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

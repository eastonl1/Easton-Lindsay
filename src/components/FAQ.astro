---
const { items } = Astro.props;
---

<section class="py-16" id="faq">
	<div class="mx-auto max-w-6xl px-6">
		<div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
			<div>
				<p class="text-sm font-semibold uppercase tracking-[0.3em] text-[color:var(--c-muted)]">FAQ</p>
				<h2 class="mt-3 text-3xl font-semibold md:text-4xl">
					Answers before you ask.
				</h2>
			</div>
			<p class="max-w-sm text-sm text-[color:var(--c-muted)]">
				Short, direct answers for independent professionals.
			</p>
		</div>

		<div class="mt-10 grid gap-4">
			{items.map((item) => (
				<details class="rounded-[18px] border border-[color:var(--c-border)] bg-[color:var(--c-surface)] p-5">
					<summary class="cursor-pointer text-base font-semibold text-[color:var(--c-text)]">
						{item.q}
					</summary>
					<p class="mt-3 text-sm text-[color:var(--c-muted)]">{item.a}</p>
				</details>
			))}
		</div>
	</div>
</section>

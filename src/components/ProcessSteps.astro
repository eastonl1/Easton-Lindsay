---
const { steps } = Astro.props;
---

<section class="py-16" id="process">
	<div class="mx-auto max-w-6xl px-6">
		<div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
			<div>
				<p class="text-sm font-semibold uppercase tracking-[0.3em] text-[color:var(--c-muted)]">
					Process
				</p>
				<h2 class="mt-3 text-3xl font-semibold md:text-4xl">
					A simple, four-step path to launch.
				</h2>
			</div>
			<p class="max-w-sm text-sm text-[color:var(--c-muted)]">
				Clear checkpoints keep your business moving without long meetings.
			</p>
		</div>

		<div class="mt-10">
			<ol class="grid gap-6 md:grid-cols-4">
				{steps.map((step, index) => (
					<li class="rounded-[18px] border border-[color:var(--c-border)] bg-[color:var(--c-surface)] p-5">
						<div class="flex items-center gap-3">
							<span
								class="flex h-10 w-10 items-center justify-center rounded-full border border-[color:var(--c-border)] bg-[color:var(--c-accent-soft)] text-sm font-semibold text-[color:var(--c-text)]"
							>
								{String(index + 1).padStart(2, "0")}
							</span>
							<p class="text-base font-semibold">{step.title}</p>
						</div>
						<p class="mt-3 text-sm text-[color:var(--c-muted)]">{step.copy}</p>
					</li>
				))}
			</ol>
		</div>
	</div>
</section>

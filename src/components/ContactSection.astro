<section class="section-reveal py-16" id="contact">
	<div class="mx-auto max-w-6xl px-6">
		<div class="reveal-stagger grid gap-10 lg:grid-cols-[1fr_1.1fr]">
			<div>
				<p class="text-sm font-semibold uppercase tracking-[0.3em] text-[color:var(--c-muted)]">Contact</p>
				<h2 class="mt-3 text-3xl font-semibold md:text-4xl">Let's make your website feel professional.</h2>
				<p class="mt-4 text-sm text-[color:var(--c-muted)]">
					If you are self-employed or run a small professional firm, this is built for you. Send a short note below.
				</p>
				<div class="mt-6 flex flex-col gap-3 text-sm text-[color:var(--c-muted)]">
					<p>I personally respond to every inquiry in 1-2 business days.</p>
				</div>
			</div>
			<div class="rounded-[24px] border border-[color:var(--c-border)] bg-[color:var(--c-surface)] p-6 shadow-[0_30px_70px_-60px_rgba(15,23,42,0.6)]">
				<form
					class="grid gap-4"
					name="contact"
					action="/thanks"
					method="post"
					data-netlify="true"
					netlify-honeypot="bot-field"
				>
					{/* Netlify detects forms after deploy. Enable notifications: Dashboard -> Site -> Forms -> contact -> Settings/Notifications. */}
					<input type="hidden" name="form-name" value="contact" />
					<input type="hidden" name="source" value="website-form" />
					<input type="hidden" name="intent" value="Website inquiry" />
					<p class="sr-only">
						<label>
							Don’t fill this out: <input name="bot-field" />
						</label>
					</p>
					<label class="grid gap-2 text-sm font-semibold text-[color:var(--c-text)]">
						Name
						<input
							class="rounded-full border border-[color:var(--c-border)] bg-white px-4 py-3 text-sm"
							type="text"
							name="name"
							required
						/>
					</label>
					<label class="grid gap-2 text-sm font-semibold text-[color:var(--c-text)]">
						Email
						<input
							class="rounded-full border border-[color:var(--c-border)] bg-white px-4 py-3 text-sm"
							type="email"
							name="email"
							required
						/>
					</label>
					<label class="grid gap-2 text-sm font-semibold text-[color:var(--c-text)]">
						Message
						<textarea
							class="min-h-[140px] rounded-[20px] border border-[color:var(--c-border)] bg-white px-4 py-3 text-sm"
							name="message"
							rows="5"
							required
						>
					</textarea>
					</label>
					<button class="btn btn-primary w-full text-sm" type="submit">Send</button>
				</form>
			</div>
		</div>
	</div>
</section>


---
const { items, statement } = Astro.props;
---

<section class="section-reveal py-16" id="who">
	<div class="mx-auto max-w-6xl px-6">
		<div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
			<div>
				<p class="text-sm font-semibold uppercase tracking-[0.3em] text-[color:var(--c-muted)]">
					Who this is for
				</p>
				<h2 class="mt-3 text-3xl font-semibold md:text-4xl">
					For professionals who rely on trust, referrals, and credibility.
				</h2>
			</div>
		</div>

		<div class="reveal-stagger mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
			{items.map((item) => (
				<article class="rounded-[18px] border border-[color:var(--c-border)] bg-[color:var(--c-surface)] px-5 py-4 text-center shadow-[0_24px_55px_-45px_rgba(15,23,42,0.5)]">
					<h3 class="text-lg font-semibold">{item.title}</h3>
				</article>
			))}
		</div>
	</div>
</section>

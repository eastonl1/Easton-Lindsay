---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import ServiceCards from "../components/ServiceCards.astro";
import Pricing from "../components/Pricing.astro";
import FeaturedCaseStudy from "../components/FeaturedCaseStudy.astro";
import FAQ from "../components/FAQ.astro";
import ContactSection from "../components/ContactSection.astro";
import CTASection from "../components/CTASection.astro";
import Footer from "../components/Footer.astro";

const BOOKING_URL = "BOOKING_URL";
const CONTACT_EMAIL = "hello@eastonlindsay.com";

const hero = {
	headline: "Look professional online with a fast, low-maintenance website.",
	subheadline:
		"I build clean, modern static sites that load instantly for self-employed professionals.",
	primaryCta: { label: "Book a quick call", href: BOOKING_URL },
	secondaryCta: { label: "View pricing", href: "#pricing" },
	bullets: [
		"Static-first: fast, secure, cheap hosting",
		"Done-for-you setup + ongoing care",
	],
};

const whoFor = {
	statement:
		"If your business relies on trust, referrals, and credibility, this is for you.",
	items: [
		{ title: "Consultants & advisors", copy: "" },
		{ title: "Accountants & bookkeepers", copy: "" },
		{ title: "Therapists & coaches", copy: "" },
		{ title: "Small professional firms (2-10 people)", copy: "" },
	],
};



const workExamples = [
	{
		title: "Financial Decisions site rebuild",
		summary:
			"Rebuilt a financial advisory site for clearer positioning, faster loading, and a sharper trust signal.",
		url: "https://financialdecisions.netlify.app",
		image: "/images/Case%20Study%20Financial%20Decisions.png",
		outcomes: [
			"Static Astro build for instant performance",
			"Newsletter signup integrated to capture leads",
			"Hosting, maintenance, and analytics setup",
		],
	},
];

const faqs = [
	{
		q: "Why static instead of WordPress?",
		a: "Static sites are faster, more secure, and cheaper to host. They are perfect for independent professionals who want reliability without constant updates.",
	},
	{
		q: "Can I edit my site myself?",
		a: "Yes. I set up a lightweight editing flow so you can update copy or add testimonials without touching code.",
	},
	{
		q: "What tools do you automate with?",
		a: "Common tools include Google Workspace, Calendly, Airtable, Notion, HubSpot, or simple spreadsheets. We pick what fits your current stack.",
	},
	{
		q: "How long does it take?",
		a: "Most sites launch in 3-5 weeks. Automations typically add 1-2 weeks depending on complexity.",
	},
	{
		q: "Do you offer ongoing support?",
		a: "Yes. The Keep-It-Running retainer covers updates, monitoring, and workflow tweaks each month.",
	},
	{
		q: "What if I already have a website?",
		a: "We can rebuild or migrate what is useful, then layer in faster pages and cleaner admin workflows.",
	},
];
---

<Layout>
	<Header />
	<main>
		<Hero
			headline={hero.headline}
			subheadline={hero.subheadline}
			primaryCta={hero.primaryCta}
			secondaryCta={hero.secondaryCta}
			bullets={hero.bullets}
		/>
		<ServiceCards items={whoFor.items} statement={whoFor.statement} />
		<Pricing bookingUrl={BOOKING_URL} email={CONTACT_EMAIL} />
		<FeaturedCaseStudy
			examples={workExamples}
			note="Have a similar business? I will tailor it."
		/>
		<FAQ items={faqs} />
		<ContactSection bookingUrl={BOOKING_URL} email={CONTACT_EMAIL} />
		<CTASection
			primaryCta={{ label: "Book a quick call", href: BOOKING_URL }}
			secondaryCta={{ label: "See pricing", href: "#pricing" }}
		/>
	</main>
	<Footer />
</Layout>

---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import ServiceCards from "../components/ServiceCards.astro";
import ServicesSplit from "../components/ServicesSplit.astro";
import Pricing from "../components/Pricing.astro";
import ProcessSteps from "../components/ProcessSteps.astro";
import FeaturedCaseStudy from "../components/FeaturedCaseStudy.astro";
import FAQ from "../components/FAQ.astro";
import ContactSection from "../components/ContactSection.astro";
import CTASection from "../components/CTASection.astro";
import Footer from "../components/Footer.astro";

const BOOKING_URL = "BOOKING_URL";
const CONTACT_EMAIL = "hello@eastonlindsay.com";

const hero = {
	headline: "Fast, low-maintenance websites for independent professionals.",
	subheadline:
		"I build secure static sites that load instantly for self-employed professionals -- then I automate the admin work that steals your evenings.",
	primaryCta: { label: "Book a quick call", href: BOOKING_URL },
	secondaryCta: { label: "View pricing", href: "#pricing" },
	bullets: [
		"Static-first: fast, secure, cheap hosting",
		"Done-for-you setup + ongoing care",
		"Automations that save hours per week",
	],
};

const whoFor = {
	statement:
		"If you are self-employed and your business runs on reputation and referrals, your site should look credible and your admin should run itself.",
	items: [
		{ title: "Consultants & advisors", copy: "Thoughtful positioning and clear lead capture." },
		{ title: "Accountants & bookkeepers", copy: "Trust-first messaging with clean intake workflows." },
		{ title: "Therapists & coaches", copy: "Calm, professional sites with low-maintenance updates." },
		{ title: "Small professional firms (2-10 people)", copy: "Shared admin systems that save the team time." },
	],
};

const services = {
	foundation: {
		title: "Static site build that feels premium",
		description: "A fast, secure web foundation that signals credibility for self-employed professionals.",
		bullets: [
			"5-7 page site (Home, About, Services, FAQs, Contact, etc.)",
			"Copy structure + page layout",
			"Analytics + basic SEO",
			"Simple editing workflow (lightweight CMS or editable content)",
			"Hosting + monitoring",
		],
	},
	ops: {
		title: "Admin automations that remove busywork",
		description: "Workflows that keep leads warm and your CRM updated without manual chasing.",
		bullets: [
			"Lead capture -> structured intake",
			"Auto follow-up sequences",
			"Booking confirmations + reminders",
			"CRM updates / spreadsheet logging",
			"Invoice triggers / admin handoff",
		],
	},
};

const processSteps = [
	{ title: "Quick call (15 min)", copy: "Clarify goals, timing, and current admin pain." },
	{ title: "Draft structure + design direction", copy: "I map pages and craft a clean visual direction." },
	{ title: "Build + review", copy: "You get weekly check-ins and a clear review flow." },
	{ title: "Launch + optional automations", copy: "Site goes live with automation add-ons ready." },
];

const workExamples = [
	{
		title: "Financial Decisions site rebuild",
		summary:
			"Rebuilt a financial advisory site for clearer positioning, faster loading, and a sharper trust signal.",
		url: "https://financialdecisions.netlify.app",
		image: "/images/Case%20Study%20Financial%20Decisions.png",
		outcomes: [
			"Static Astro build for instant performance",
			"Newsletter signup integrated to capture leads",
			"Hosting, maintenance, and analytics setup",
		],
	},
];

const faqs = [
	{
		q: "Why static instead of WordPress?",
		a: "Static sites are faster, more secure, and cheaper to host. They are perfect for independent professionals who want reliability without constant updates.",
	},
	{
		q: "Can I edit my site myself?",
		a: "Yes. I set up a lightweight editing flow so you can update copy or add testimonials without touching code.",
	},
	{
		q: "What tools do you automate with?",
		a: "Common tools include Google Workspace, Calendly, Airtable, Notion, HubSpot, or simple spreadsheets. We pick what fits your current stack.",
	},
	{
		q: "How long does it take?",
		a: "Most sites launch in 3-5 weeks. Automations typically add 1-2 weeks depending on complexity.",
	},
	{
		q: "Do you offer ongoing support?",
		a: "Yes. The Keep-It-Running retainer covers updates, monitoring, and workflow tweaks each month.",
	},
	{
		q: "What if I already have a website?",
		a: "We can rebuild or migrate what is useful, then layer in faster pages and cleaner admin workflows.",
	},
];
---

<Layout>
	<Header />
	<main>
		<Hero
			headline={hero.headline}
			subheadline={hero.subheadline}
			primaryCta={hero.primaryCta}
			secondaryCta={hero.secondaryCta}
			bullets={hero.bullets}
		/>
		<ServiceCards items={whoFor.items} statement={whoFor.statement} />
		<ServicesSplit foundation={services.foundation} ops={services.ops} />
		<Pricing bookingUrl={BOOKING_URL} email={CONTACT_EMAIL} />
		<ProcessSteps steps={processSteps} />
		<FeaturedCaseStudy
			examples={workExamples}
			note="Have a similar business? I will tailor it."
		/>
		<FAQ items={faqs} />
		<ContactSection bookingUrl={BOOKING_URL} email={CONTACT_EMAIL} />
		<CTASection
			primaryCta={{ label: "Book a quick call", href: BOOKING_URL }}
			secondaryCta={{ label: "See pricing", href: "#pricing" }}
		/>
	</main>
	<Footer />
</Layout>
